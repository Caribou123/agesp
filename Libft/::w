#include "libft.h"

void	*ft_memccpy(void *t, const void *f, int c,  size_t n)
{
	/*int i;
	  unsigned char *savedst;
	  unsigned char *savesrc;

	  i = 0;
	  savedst = (unsigned char*)dst;
	  savesrc = (unsigned char*)src;
	  if (savedst[0] == '\0' && n == 0)
	  return (0);
	  if (n == 0 || savedst == savesrc)
	  return (savedst);
	  if (!c)
	  return (ft_memcpy(dst, src, n));
	  while (i < n && savesrc[i] != (unsigned char)(c))
	  {
	  savedst[i] = savesrc[i];
	  i++;
	  }
	  if (i == n)
	  return (NULL);
	  savedst[i] = (unsigned char )(c);
	  dst = savedst;
	  return (dst);*/

		if (n) {
			unsigned char *tp = t;
			const unsigned char *fp = f;
			unsigned char uc = c;
			do {
				if ((*tp++ = *fp++) == uc)
					return (tp);
			} while (--n != 0);
		}
		return (0);
	}
}
